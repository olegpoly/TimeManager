<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.github.olegpoly.TimeManager.Fragments.TimerFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ActivityName"
            android:textColor="#ff9800"
            android:textSize="20dp"
            android:id="@+id/activityName"
            />
        </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <Button
        style="@style/btnStyleHaiti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start timer"
        android:textColor="#ff9800"
        android:id="@+id/startTimer" />

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    <Button
        style="@style/btnStyleHaiti"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop timer"
        android:textColor="#ff9800"
        android:id="@+id/stopTimer" />

        <View
            android:layout_width="5dp"
            android:layout_height="match_parent"
            android:layout_weight="1"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:textColor="#ff9800"
        android:textSize="30dp"
        android:id="@+id/timeTextView" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:layout_width="match_parent"
            android:layout_height="5dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/bright_foreground_disabled_material_light"/>

    </LinearLayout>

</LinearLayout>
